
<div class="container">
  <div class="row p-5">
    <div class="col-md-4 mb-auto">
      <div class="search-form">
        <%= search_form_for(@q, class:"mb-5") do |f| %>
          <div class="form-group">
            <%= f.label "Search", class:"search-label" %>
            <%= f.search_field :name_cont, class:"form-control border-bar" , placeholder: "..." %>
          <%= link_to type:"submit",class:"btn btn-floating" do %>
            <%= fa_icon "search lg", class:"icon-c"%>
          <% end %>
          </div>
        <% end %>
      </div>
      <div class="create-form">
        <%= form_with model: @task, url:"/tasks", local: true do |f| %>
          <div class="form-group">
              <%= f.text_field :name, class: "form-control border-bar", id: "task_name" ,placeholder: "New task ..." %>
          </div>
          <%= f.submit "Create", class: "create-button" %>
        <% end %>
      </div>
    </div>
    <div class="col-md-8">
      <table class="table table-hover">
        <thead class="thead">
          <tr>
            <th>Task list</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <% @tasks.each do |task| %>
          <tbody>
            <tr class="content">
              <td class="col-md-8"><%= task.name  %></td>
              <td class="col-md-2">
                  <%= link_to edit_task_path(task),class:"btn btn-floating" do %>
                    <%= fa_icon "edit lg", class:"icon-a" %>
                  <% end %>
               </td>
               <td class="col-md-2">
                  <%= link_to task_path(task), method: :delete, class:"btn btn-floating" ,data: { confirm: "Sure?"} do %>
                    <%= fa_icon "trash lg", class:"icon-b" %>
                  <% end %>
               </td>
            </tr>
          </tbody>
        <% end %>
      </table>

    </div>
  </div>
</div>
